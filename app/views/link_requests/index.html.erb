<p id="notice"><%= notice %></p>

<h1><%= params[:filter] == 'me' ? 'Your' : 'All' %> Link Requests</h1>

    <% @link_requests.each do |link_request| %>
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-8">
              <h3 class="panel-title"><%= link_to link_request.title, link_request_path(link_request) %></h3>
            </div>
            <div class="col-md-4">
              <a href="<%= link_request_path(link_request) %>" class="btn btn-success pull-right" role="button">View</a>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <p><%= link_request.description %></p>
          <% if current_user.present? and current_user.publisher? %>
              <% unless current_user.link_request_offers.pluck(:link_request_id).include? (link_request.id)%>
                  <p>
                    <a href="<%= link_request_path(link_request) %>" class="btn btn-primary" role="button">Add Offer</a>
                  </p>
              <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

<br>